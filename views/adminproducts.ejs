<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/CSS/admin.css">
    <link rel="stylesheet" href="/CSS/adminMedia.css">
    <link rel="stylesheet" href="/CSS/product.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body class="body">
      <div class="grid-container grid">
      <%- include('./includes/adminHeader.ejs') %>
        <!-- Sidebar -->
        <%- include('./includes/admin-sidebar.ejs') %>        
        <!-- Main -->
        <% if (prods.length > 0) { %>
          <main class="main-container">
            <div class="product-container my-4">
              <% for (let product of prods) { %>
            <article class="product-block">             
                <img class="product__img" src="<%= product.imageUrl %>" alt="<%= product.title %>">
                <div class="product-data">
                  <h6 class="product-name"><%= product.title %></h6>
                  <h6 class="text-secondary"><%= product.description %></h6>
                  <span class="price"><%= product.price %></span>
                  <form action="/admin/editProduct/:productId" method="GET">
                  <input type="hidden" value="<%= product.productId %>" name="productId">
                  <input type="hidden" value="<%= product.title %>" name="title">
                  <input type="hidden" value="<%= product.price %>" name="price">
                  <input type="hidden" value="<%= product.description %>" name="description">
                  <input type="hidden" value="<%= product.imageUrl %>" name="imageUrl">
                  <div class="btn-outline p--5 d-flex justify-content-center"><button class="edit-btn btn-outline-inner px-5 py-1">Edit Product</button></div>
                  </form>
                  <form action="/admin/deleteProduct" method="POST">
                    <input type="hidden" value="<%= product.productId %>" name="productId">
                    <div class="btn-outline p--5 d-flex justify-content-center"><button class="delete-btn btn-outline-inner px-5 py-1">Delete</button></div>
                  </form>
                </div>
            </article>
          <% } %>
            </div>
          <% } else { %>
            <h1 class="text-center my-1">No Products Found!</h1>
            <% } %>
          </div>
        </div>
        </main>
        <!-- End-main -->
      </div> 

      
<!-- Custom Js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/apexcharts/3.35.3/apexcharts.min.js"></script>
<script src="/JS/index.js"></script>

</body>
</html>
